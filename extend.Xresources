!############
!##  rofi  ##
!############

! Enable the extended coloring options
rofi.color-enabled: true

!                  bg       border   separator
!rofi.color-window: #1e1e20, #274850, #274850
rofi.color-window: #222222, #6FC386, #6FC386
!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #222222, #6FC386, #222222, #222222, #ffffff
rofi.color-active: #222222, #6FC386, #222222, #222222, #ffffff
rofi.color-urgent: #222222, #6FC386, #222222, #222222, #ffffff

rofi.separator-style: 	solid
rofi.sidebar-mode: 	    false
rofi.show-icons:		true
rofi.lines: 		  	5
rofi.font: 			  	Iosevka_Custom Bold 13
rofi.bw: 			  	1
rofi.columns: 		  	1
rofi.padding: 			5
rofi.fixed-num-lines: 	false
rofi.hide-scrollbar: 	true
