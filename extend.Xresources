!############
!## urxvt  ##
!############


urxvt.internalBorder:				40
urxvt.geometry: 					80x22
urxvt.background:					[100]#1C1C1C
urxvt*scrollBar:                    false
urxvt*cursorBlink:                  true
urxvt*foreground: 		            #c5c8c6
urxvt*cursorColor:		            #c5c8c6
urxvt*cursorUnderline:		        1
URxvt*saveLines:					2048
urxvt.keysym.Control-Up:   			\033[1;5A
urxvt.keysym.Control-Down:    		\033[1;5B
urxvt.keysym.Control-Left:    		\033[1;5D
urxvt.keysym.Control-Right:    		\033[1;5C
urxvt.keysym.Shift-Up: 				command:\033]720;1\007
urxvt.keysym.Shift-Down: 			command:\033]721;1\007
!urxvt.letterSpace: 			1		
urxvt*mouseWheelScrollPage: 		False
urxvt*iso14755: False


urxvt*boldFont: xft:Monaco for Powerline:style:bold:size=12

urxvt*font: xft:Monaco for Powerline:regular:size=12:antilias=true, \
			xft:Hurmit NF:size=14:antilias=true, \
	 	    xft:EmojiOne Color:size=14, \
			xft:Symbola:size=14:antilias=true, \
            xft:unifont:size=14:style=Medium:antialias=false


